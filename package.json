{
    "name": "setup-crystal-action",
    "version": "1.0.0",
    "description": "setup crystal",
    "main": "lib/main.js",
    "scripts": {
        "build": "tsc",
        "pack": "ncc build src/main.ts -o dist/main && ncc build src/post.ts -o dist/post",
        "test": "jest",
        "lint": "eslint src/**/*.ts"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@octokit/types": "^6.1.2",
        "@types/jest": "^26.0.19",
        "@types/node": "^14.14.17",
        "@types/semver": "^7.3.4",
        "@typescript-eslint/eslint-plugin": "^4.0.0",
        "@typescript-eslint/parser": "^3.10.1",
        "@zeit/ncc": "^0.22.3",
        "eslint": "^7.8.1",
        "eslint-config-prettier": "^7.1.0",
        "eslint-plugin-prettier": "^3.3.0",
        "jest": "^26.4.2",
        "jest-circus": "^26.6.3",
        "prettier": "^2.1.1",
        "ts-jest": "^26.3.0",
        "typescript": "^4.1.3"
    },
    "dependencies": {
        "@actions/cache": "^1.0.5",
        "@actions/core": "^1.2.6",
        "@actions/github": "^4.0.0",
        "@actions/io": "^1.0.2",
        "@actions/tool-cache": "^1.6.1",
        "semver": "^7.3.4"
    },
    "jest": {
        "clearMocks": true,
        "moduleFileExtensions": [
            "js",
            "ts"
        ],
        "testEnvironment": "node",
        "testMatch": [
            "**/*.test.ts"
        ],
        "testRunner": "jest-circus/runner",
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "verbose": true
    }
}
