{
    "name": "setup-crystal-action",
    "version": "1.0.0",
    "description": "setup crystal",
    "main": "lib/main.js",
    "scripts": {
        "build": "tsc",
        "pack": "ncc build src/main.ts -o dist/main && ncc build src/post.ts -o dist/post",
        "test": "jest",
        "lint": "eslint src/**/*.ts",
        "lint:report": "eslint --output-file eslint_report.json --format json src/**/*.ts"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@octokit/types": "^6.14.2",
        "@types/jest": "^26.0.23",
        "@types/node": "^14.14.44",
        "@types/semver": "^7.3.5",
        "@typescript-eslint/eslint-plugin": "^4.25.0",
        "@typescript-eslint/parser": "^4.23.0",
        "@vercel/ncc": "^0.27.0",
        "eslint": "^7.26.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "jest": "^26.6.3",
        "jest-circus": "^26.6.3",
        "prettier": "^2.3.0",
        "ts-jest": "^26.5.6",
        "typescript": "^4.2.4"
    },
    "dependencies": {
        "@actions/cache": "^1.0.7",
        "@actions/core": "^1.2.7",
        "@actions/github": "^4.0.0",
        "@actions/io": "^1.1.0",
        "@actions/tool-cache": "^1.6.1",
        "@octokit/plugin-rest-endpoint-methods": "^5.1.1",
        "semver": "^7.3.5"
    },
    "jest": {
        "clearMocks": true,
        "moduleFileExtensions": [
            "js",
            "ts"
        ],
        "testEnvironment": "node",
        "testMatch": [
            "**/*.test.ts"
        ],
        "testRunner": "jest-circus/runner",
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "verbose": true
    }
}
