{
    "name": "setup-crystal-action",
    "version": "1.0.0",
    "description": "setup crystal",
    "main": "lib/main.js",
    "scripts": {
        "build": "tsc",
        "pack": "ncc build src/main.ts -o dist/main && ncc build src/post.ts -o dist/post",
        "test": "jest",
        "lint": "eslint src/**/*.ts"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@octokit/types": "^5.4.0",
        "@types/jest": "^26.0.9",
        "@types/node": "^14.0.27",
        "@types/semver": "^7.3.1",
        "@typescript-eslint/eslint-plugin": "^3.9.0",
        "@typescript-eslint/parser": "^3.9.0",
        "@zeit/ncc": "^0.22.3",
        "eslint": "^7.6.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.4",
        "jest": "^26.4.1",
        "jest-circus": "^26.4.1",
        "prettier": "^2.0.5",
        "ts-jest": "^26.2.0",
        "typescript": "^3.9.7"
    },
    "dependencies": {
        "@actions/cache": "^1.0.2",
        "@actions/core": "^1.2.4",
        "@actions/github": "^4.0.0",
        "@actions/io": "^1.0.2",
        "@actions/tool-cache": "^1.6.0",
        "semver": "^7.3.2"
    },
    "jest": {
        "clearMocks": true,
        "moduleFileExtensions": [
            "js",
            "ts"
        ],
        "testEnvironment": "node",
        "testMatch": [
            "**/*.test.ts"
        ],
        "testRunner": "jest-circus/runner",
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "verbose": true
    }
}
