{
    "name": "setup-crystal-action",
    "version": "1.0.0",
    "description": "setup crystal",
    "main": "lib/main.js",
    "scripts": {
        "build": "tsc",
        "pack": "ncc build src/main.ts -o dist/main && ncc build src/post.ts -o dist/post",
        "test": "jest",
        "lint": "eslint src/**/*.ts",
        "lint:report": "eslint --output-file eslint_report.json --format json src/**/*.ts"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@octokit/types": "^9.0.0",
        "@types/jest": "^28.1.8",
        "@types/node": "^18.15.11",
        "@types/semver": "^7.3.13",
        "@typescript-eslint/eslint-plugin": "^5.57.1",
        "@typescript-eslint/parser": "^5.57.0",
        "@vercel/ncc": "^0.36.1",
        "eslint": "^8.37.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jest": "^28.1.3",
        "jest-circus": "^29.5.0",
        "prettier": "^2.8.7",
        "ts-jest": "^28.0.8",
        "typescript": "^5.0.3"
    },
    "dependencies": {
        "@actions/cache": "^3.2.1",
        "@actions/core": "^1.10.0",
        "@actions/github": "^5.1.1",
        "@actions/io": "^1.1.3",
        "@actions/tool-cache": "^2.0.1",
        "@octokit/plugin-rest-endpoint-methods": "^7.0.1",
        "semver": "^7.3.8"
    },
    "jest": {
        "clearMocks": true,
        "moduleFileExtensions": [
            "js",
            "ts"
        ],
        "testEnvironment": "node",
        "testMatch": [
            "**/*.test.ts"
        ],
        "testRunner": "jest-circus/runner",
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "verbose": true
    }
}
