{
    "name": "setup-crystal-action",
    "version": "1.0.0",
    "description": "setup crystal",
    "main": "lib/main.js",
    "scripts": {
        "build": "tsc",
        "pack": "ncc build src/main.ts -o dist/main && ncc build src/post.ts -o dist/post",
        "test": "jest",
        "lint": "eslint src/**/*.ts",
        "lint:report": "eslint --output-file eslint_report.json --format json src/**/*.ts"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@octokit/types": "^6.38.2",
        "@types/jest": "^28.1.4",
        "@types/node": "^18.0.1",
        "@types/semver": "^7.3.10",
        "@typescript-eslint/eslint-plugin": "^5.30.0",
        "@typescript-eslint/parser": "^5.30.0",
        "@vercel/ncc": "^0.34.0",
        "eslint": "^8.18.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jest": "^28.1.2",
        "jest-circus": "^28.1.2",
        "prettier": "^2.7.1",
        "ts-jest": "^28.0.5",
        "typescript": "^4.7.4"
    },
    "dependencies": {
        "@actions/cache": "^3.0.0",
        "@actions/core": "^1.9.0",
        "@actions/github": "^5.0.3",
        "@actions/io": "^1.1.2",
        "@actions/tool-cache": "^2.0.1",
        "@octokit/plugin-rest-endpoint-methods": "^5.16.0",
        "semver": "^7.3.7"
    },
    "jest": {
        "clearMocks": true,
        "moduleFileExtensions": [
            "js",
            "ts"
        ],
        "testEnvironment": "node",
        "testMatch": [
            "**/*.test.ts"
        ],
        "testRunner": "jest-circus/runner",
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "verbose": true
    }
}
